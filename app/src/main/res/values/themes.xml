<resources>
    <!-- Base application theme. -->
    <style name="Theme.FreshWaves" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="fontFamily">@font/yantramanav_regular</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <!-- Background -->
        <item name="android:background">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorControlNormal">@color/onBackground</item>

        <!-- Surface -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorPrimarySurface">@color/surface</item>
        <item name="colorOnPrimarySurface">@color/onSurface</item>

        <!-- Error -->
        <item name="android:colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <!-- Cards -->
        <item name="materialCardViewStyle">@style/FreshAlbumCardTheme</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background</item>

        <!-- ActionBar -->
        <item name="toolbarStyle">@style/FreshToolbar</item>

        <!-- Progress Bar -->
        <item name="progressBarStyle">@style/FreshLoadingSpinner</item>

    </style>

    <style name="FreshToolbar.AppBar">
        <item name="android:background">@drawable/title_border</item>
    </style>

    <style name="FreshToolbar">
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="popupTheme">@style/Theme.PopupOverlay.Menu</item>
    </style>

    <style name="Theme.PopupOverlay.Menu" parent="ThemeOverlay.Material3.Light">
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="FreshToolbar.Icon">
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">-0.75dp</item>
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="FreshToolbar.Title">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@null</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">bottom|start</item>
        <item name="fontFamily">@font/bebas_neue_regular</item>
    </style>

    <style name="FreshAlbumCardTheme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:background">@color/surface</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:textAppearance">@color/onSurface</item>
        <item name="textAppearanceBody1">@color/onSurface</item>
    </style>

    <style name="FreshFloatingActionButton" parent="Widget.Material3.FloatingActionButton.Surface" />

    <style name="FreshLoadingSpinner" parent="Widget.Material3.CircularProgressIndicator" />

    <style name="FreshLoadingMessage">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="background">@null</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FreshAlbumList">
      <item name="android:background">@drawable/list_background</item>
    </style>
</resources>
